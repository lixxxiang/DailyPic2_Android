<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/videoname"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:text="TextView"
        android:textColor="#4a4a4a"
        android:textSize="16dp"
        tools:text="费萨拉巴德位于巴基斯坦东北部，费萨拉巴德位于巴基斯坦东巴基斯坦东北部，费萨拉巴..." />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/videopic"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_below="@+id/videoname"
        android:layout_marginEnd="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="14dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/test"
        fresco:placeholderImage="@drawable/video_image"
        fresco:roundedCornerRadius="5dp"/>

    <ImageView
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/play_button"
        android:layout_marginTop="116dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_alignLeft="@+id/videopic"
        android:layout_alignStart="@+id/videopic"
        android:layout_marginRight="17dp"
        android:layout_below="@+id/videoname"
        android:layout_marginTop="157dp"
        android:background="@drawable/mask"
        android:layout_marginEnd="17dp"
        android:id="@+id/imageView2" />
    <TextView
        android:id="@+id/videodate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/videopic"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/videodate" />

    <TextView
        android:id="@+id/playTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/videopic"
        android:layout_alignStart="@+id/videopic"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:textSize="12dp"
        android:textColor="#ffffff"
        />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/videopic"
        android:layout_alignRight="@+id/videopic"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:layout_marginTop="6dp"
        />
</RelativeLayout>
